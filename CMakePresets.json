{
    "version": 3,
    "configurePresets": [
        {
            "name": "BaseLinux",
            "displayName": "BaseLinux",
            "hidden": true,
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-linux"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "DebugLinux",
            "displayName": "DebugLinux",
            "description": "DebugLinux",
            "hidden": false,
            "inherits": "BaseLinux",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ReleaseLinux",
            "displayName": "ReleaseLinux",
            "description": "ReleaseLinux",
            "hidden": false,
            "inherits": "BaseLinux",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "BaseWindows",
            "displayName": "BaseWindows",
            "hidden": true,
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "DebugWindows",
            "displayName": "DebugWindows",
            "description": "DebugWindows",
            "hidden": false,
            "inherits": "BaseWindows",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ReleaseWindows",
            "displayName": "ReleaseWindows",
            "description": "ReleaseWindows",
            "hidden": false,
            "inherits": "BaseWindows",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "DebugLinux",
            "displayName": "DebugLinux",
            "configurePreset": "DebugLinux",
            "configuration": "Debug"
        },
        {
            "name": "ReleaseLinux",
            "displayName": "ReleaseLinux",
            "configurePreset": "ReleaseLinux",
            "configuration": "Release"
        },
        {
            "name": "DebugWindows",
            "displayName": "DebugWindows",
            "configurePreset": "DebugWindows",
            "configuration": "Debug"
        },
        {
            "name": "ReleaseWindows",
            "displayName": "ReleaseWindows",
            "configurePreset": "ReleaseWindows",
            "configuration": "Release"
        }
    ]
}